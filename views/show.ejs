
<ul>
    <% _.each(pages, function (data) { %>
        <li class="nav" style="float:left;margin:5px;">
            <a href="/show?projectBy=<%=projectId %>&pageId=<%=data.id %>">
                <%=data.name %>
            </a>
        </li>
        <% }) %>
</ul>


<ul>
    <% _.each(files, function (data) { %>
        <li>
            <br/>
            <br/>
            <!--
            <p>type:
                <%=data.type %>
            </p>
            <p>pageBy:
                <%=data.pageBy %>
            </p>
            <p>pageFileId:
                <%=data.id %>
            </p>
            -->
            <p>
                <h3 style="text-align: center;"><%=data.title %></h3>
            </p>
            <% if (data.type=="application/x-shockwave-flash" ) { %>
                <div id="Flash_container_<%=data.id %>" style="width:<%=data.width%>px;height:<%=data.height%>px;margin:0px auto;">
                    <object id="FlashID_<%=data.id %>" width="100%" height="100%">
                        <param name="movie" value="<%=data.path %>">
                        <param name="quality" value="high">
                        <param name="wmode" value="opaque">
                        <param name="swfversion" value="8.0.35.0">
                        <!-- 此 param 標籤會提示使用 Flash Player 6.0 r65 和更新版本的使用者下載最新版本的 Flash Player。如果您不想讓使用者看到這項提示，請將其刪除。 -->
                        <param name="expressinstall" value="js/expressInstall.swf">
                        <!-- 下一個物件標籤僅供非 IE 瀏覽器使用。因此，請使用 IECC 將其自 IE 隱藏。 -->
                        <!--[if !IE]>-->
                        <object type="application/x-shockwave-flash" data="<%=data.path %>" width="100%" height="100%">
                            <!--<![endif]-->
                            <param name="quality" value="high">
                            <param name="wmode" value="opaque">
                            <param name="swfversion" value="8.0.35.0">
                            <param name="expressinstall" value="js/expressInstall.swf">
                            <!-- 瀏覽器會為使用 Flash Player 6.0 和更早版本的使用者顯示下列替代內容。 -->
                            <div>
                                <h4>這個頁面上的內容需要較新版本的 Adobe Flash Player。</h4>
                                <p>
                                    <a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="取得 Adobe Flash Player" width="112" height="33" />
                                    </a>
                                </p>
                            </div>
                            <!--[if !IE]>-->
                        </object>
                        <!--<![endif]-->
                    </object>
                </div>
                <script type="text/javascript">
                    swfobject.registerObject("FlashID_<%=data.id %>");
                </script>

                <% }else{ %>

                    <div id="images_container_<%=data.id %>" style="margin:0px auto;width:<%=data.width%>px;height:<%=data.height%>px">
                        <img id="imagesID_<%=data.id %>" src="<%=data.path %>" onerror="location.reload();" alt="<%=data.title %>" style="width:<%=data.width%>;height:<%=data.height%>;">
                    </div>
                    <% } %>
        </li>
        <% }) %>
</ul>
<script>
    
    setInterval(function () {location.reload();}, 3000);
</script>